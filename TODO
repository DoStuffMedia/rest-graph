= 1.1
* auto authorization?

class AuthError < RuntimeError; end

rg = RestGraph.new(:scope => 'publish_stream,read_friendlists',
                   :error_callback => lambda{ |json| raise AuthError } )

begin
  rg.get('me')
rescue AuthError
  # ...
end

rg.error_callback = lambda{ |json| redirect request.url }
